[module/power-menu]
type = custom/menu

label-open = 
label-close = C
label-separator = /
label-separator-margin = 1
menu-0-0 = Terminate WM
menu-0-0-foreground = ${root.accent-color}
menu-0-0-exec = bspc quit -1
menu-0-1 = Reboot
menu-0-1-foreground = ${root.accent-color}
menu-0-1-exec = shutdown -r now
menu-0-2 = Power off
menu-0-2-foreground = ${root.accent-color}
menu-0-2-exec = shutdown -h now
menu-0-3 = Sleep
menu-0-3-foreground = ${root.accent-color}
menu-0-3-exec = systemctl suspend

