[module/power-menu]
type = custom/menu
label-open = 
label-close = C
label-close-background = ${color.ib}
label-open-background = ${color.ib}
label-separator = " / "
label-separator-background = ${color.ib}
content-background = ${color.ib}
label-separator-margin = 0
menu-0-0 = Terminate WM
menu-0-0-foreground = ${color.ac}
menu-0-0-background = ${color.ib}
menu-0-0-exec = bspc quit -1
menu-0-1 = Reboot
menu-0-1-foreground = ${color.ac}
menu-0-1-background = ${color.ib}
menu-0-1-exec = shutdown -r now
menu-0-2 = Power off
menu-0-2-foreground = ${color.ac}
menu-0-2-background = ${color.ib}
menu-0-2-exec = shutdown -h now
menu-0-3 = Sleep
menu-0-3-foreground = ${color.ac}
menu-0-3-background = ${color.ib}
menu-0-3-exec = systemctl suspend

